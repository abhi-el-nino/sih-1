

<!-- Contact Section Begin -->
<section class="contact-section">
  <div class="container">
    <br />
    <div class="container">
      <div class="row">

      </div>

    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="contact-details">
          <h2 class="text-center" style="font-size: 30px;">Your request for payment has been successfully
            recorded <img src="img/check.png" style="width: 30px;"></h2>
          <div class="contact-form">
            <form action="#">
              <div class="row">
                <div class="col-lg-8">
                  <input type="text" placeholder="none" value="<%= sessionId %>" id="transId" readonly>
                </div>
                <div class="col-lg-4">
                  <button type="submit" class="submit-btn contact-btn" style="width:100%;"
                    onclick="copyToClipBoard()">Copy to Clipboard</button>
                </div>
              </div>

            </form>
          </div>
          </form>
          <br />
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <p class="bigPara text-center">
                  Keep this ID for future reference. A confirmation mail would be sent to you once the payment is
                  confirmed by the bank
                </p>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-4"></div>
              <div class="col-lg-4">
                <button type="submit" class="submit-btn success-btn" style="width:100%;"
                  onclick="window.location.href='/'">Back to Dashboard</button>
              </div>
              <div class="col-lg-4"></div>
            </div>
            <div class="row">

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
<script>
  function copyToClipBoard() {
      var copyText = document.getElementById("transId");
      copyText.select();
      copyText.setSelectionRange(0, 99999);
      document.execCommand("copy");
      //copyText.setCustomValidity("Text copied");
      alert("Copied " + copyText.value + " to clipboard");
  }
</script>
