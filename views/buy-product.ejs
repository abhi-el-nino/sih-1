<link href="https://fonts.googleapis.com/css?family=Gelasio&display=swap" rel="stylesheet">
<div class="container">
    <div class="container">
        <div class="jumbotron d-flex align-items-center justify-content-center bg-warning ">
            <h1 style="font-family: 'Gelasio', serif;font-weight:600;">
                <%=product.title%>
            </h1>
        </div>


        <img src="<%=product.image%>" class="rounded mx-auto d-block">
        <div style="margin:10px">
            <select class="form-control form-control-sm">
          
              <option selected>Farmer A</option>
            <option>Farmer B</option>
            <option>Farmer C</option>
          </select>
        </div>
        <div style="margin:10px">
            <select class="form-control form-control-sm">
           
            <option selected>Elite</option>
            <option>Premium</option>
            <option>Classic</option>
          </select>
        </div>
        <div style="margin:10px">
            <input class="form-control form-control-sm" id="item-quantity" type="number" min="1" max="">
        </div>
        <div class="card mx-auto " style="width:50rem;border:10px solid #e6dbda;padding-left:0;padding-right:0;margin-top:50px;">

            <div class="card-body" class="card-img-top">
                <p class=" card-text text-center" style="font-family: 'Gelasio', serif;font-weight:500;">
                    <%=product.description%>
                </p>
            </div>
            <ul class="list-group list-group-flush text-center">
                <li class="list-group-item">Price: <strong>Rs.<%=product.price%></strong></li>

            </ul>
            <div class="card-body d-flex justify-content-center">
                <button class="btn primary-btn" type="button" data-toggle="collapse" data-target="#user-chat-box" aria-expanded="false" aria-controls="collapseExample" style="margin-right:18px;" id="negotiate-button" data-farmerId="<%= product.farmer %>" data-buyerId="<%= user.id %>">
				negotiate
			  </button>
                <a class="btn btn-success card-link cart-toggler" id="item-<%=product._id%>" href="#">
				Add To Cart
			</a>
                <a class="btn btn-danger card-link" href="#">
				Lock
			</a>
            </div>
        </div>
    </div>

</div>
    <!-- chat box start-->
    <div id="user-chat-box" class="collapse">
        <ul id="chat-messages-list" class="card card-body">
            <li class="other-message">
                <span>Other Message</span>
            </li>
            <li class="self-message">
                <span>
            Self Message
          </span>

            </li>

        </ul>
        <div id="chat-message-input-container">
            <input id="chat-message-input" placeholder="Type message here">
            <button id="send-message" data-farmerId="<%= product.farmer %>" data-buyerId="<%= user.id %>" data-userType="buyer"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></button>
        </div>
        <form id="chat-message-lock-container" method="POST" action="/shop/<%=user.id%>">
            <input id="lock-input" name="final-price" placeholder="final amount">
            <button id="lock-buyer" class="btn btn-danger"><i class="fa fa-lock" aria-hidden="true"></i></button>
        </form>

    </div>
  
    <script src="/ajax/shopping-cart.js"></script>
    <script src="/ajax/increase_quantity.js"></script>
    <script>
        let adder = $('.cart-toggler');
        let cartRemoveButton = $('.cart-remove');
        new CartFill(adder);
        new RemoveFromCart(cartRemoveButton);
    </script>
   