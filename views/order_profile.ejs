                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (items.length == 0){%>
                                <tr colspan="5"><h1>No orders Placed Yet</h1></tr>

                                <%}else{ %>
                            <% for (item in items){%>
                                <tr>
                                    <td class="cart-pic first-row"><img src="<%= items[item].image %>" alt=""></td>
