{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["src"]
}
